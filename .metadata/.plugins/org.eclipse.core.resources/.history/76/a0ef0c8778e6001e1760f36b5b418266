        <select id="" class="grade">
            <option value="최우수" class="grade">최우수</option>
            <option value="우수" class="grade">우수</option>
            <option value="보통" class="grade">일반</option>
        </select>
        <input type="button" id="addcustomer" value="추가">
        <input type="button" id="removeall" value="초기화">

    </div>
    <br><br>

    <div>
        <form action="" method="POST">
            <select name="searchType" id="">
