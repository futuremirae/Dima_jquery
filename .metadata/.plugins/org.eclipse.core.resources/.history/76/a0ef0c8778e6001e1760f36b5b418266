<!DOCTYPE html>
<html lang="ko" xmlns:th="http://www.thymeleaf.org">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script th:src="@{/script/jquery-3.7.1.min.js}"></script>
    <style>
        thead {
            background-color: aquamarine;
        }
    </style>
    <script>
        $(function () {
            $("#checkAll").on("click", function () {
                if ($(this).is(":checked")) {
                    $("#memberTable input:checkbox").prop("checked", true);
                    // input[type]='checked'
                }
                else $("#memberTable input:checkbox").prop("checked", false);

            })
            //
            $("#deleteMember").on("click", function () {

                let data = $("#memberTable input:checkbox:checked").parent().parent();// 제이쿼리객체 
                console.log(data)
                data.remove();
            })
            //

            $("#addcustomer").on("click", function () {
                let name = $("#name").val();
                let phone = $("#phone").val();
                let address = $("#address").val();


                let grade = $(".grade :selected").val();

                console.log(grade);


                // 정보 추가하기 

                let result = `<tr><td><input type="checkbox"></td><td>${name}</td><td>${phone}</td><td>${address}</td><td>${grade}</td></tr >`
                console.log(result);

                $("table").append(result);





            })//끝
            //초기화 하기 
            $("#removeall").on("click", function () {
                let input = $("#customerInfo input[type='text']")
                console.log(input.length);
                for(let i = 0; i< input.length;i++){
                	input[i].value="";
                	//console.log(input[i]);
                	
                }

            });


        });
    </script>
</head>

<body>
